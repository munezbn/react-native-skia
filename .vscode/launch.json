    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Clang++10 Debug",
            "program": "${workspaceFolder}/out/Debug/ReactSkiaApp",
            "args": [],
            "cwd": "${workspaceFolder}/out/Debug",
            "stopAtEntry": false,
            "environment": [], 
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }

                {
                     "description": "ignore SIGUSR1 signal",
                     "text": "handle SIGUSR1 nostop noprint pass"
                }
            ],
            "preLaunchTask": "C/C++: clang++-10 build active file",
            "miDebuggerPath": "/usr/bin/gdb"

        }
    ]
}