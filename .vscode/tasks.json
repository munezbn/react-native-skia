{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    
        "version": "2.0.0",
        "tasks": [
                {
                          "type": "cppbuild",
                          "label": "C/C++: clang++-10 build active file",
                          "command": "<path>/depot_tools/ninja",
                          "args": [
                                          "-C",
                                         "out/Debug"
                                     ],
                          "options": {
                                    "cwd": "${workspaceFolder}"
                          },
                         "problemMatcher": [
                                      "$gcc"
                         ],
                         "group": "build",
                         "detail": "compiler: clang"
                 }

        ]

}